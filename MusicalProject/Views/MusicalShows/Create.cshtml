@model MusicalProject.ViewModels.MusicalShowFormViewModel

@{
    ViewBag.Title = "Create";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm(Model.Action, "MusicalShows"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <p class="alert alert-info">All fields are <strong>required.</strong></p>
    <div class="form-group">
        @Html.LabelFor(m => m.Venue)
        @Html.TextBoxFor(m => m.Venue, new { @class = "form-control", autofocus = "autofocus"})
        @Html.ValidationMessageFor(m => m.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "eg: 26 Jan 2023"})
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg: 16:00"})
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "-----", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Genre)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>

} 

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
